<?xml version="1.0"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <EntityComponents>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>Cyber-Trigger-CallCargoShip</SubtypeId>
      </Id>
      <Description>

        [RivalAI Trigger]

        [UseTrigger:true]
        [Type:Timer]

        [MinCooldownMs:240000]
        [MaxCooldownMs:360001]
        [StartsReady:true]
        
        [MaxActions:-1]
        [Actions:Cyber-Action-CallCargoShip]

      </Description>

    </EntityComponent>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>Cyber-Action-CallCargoShip</SubtypeId>
      </Id>
      <Description>

        [RivalAI Action]

        [BroadcastCommandProfiles:true]
        [CommandProfileIds:Cyber-Command-CallCargoShip]

      </Description>

    </EntityComponent>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>Cyber-Command-CallCargoShip</SubtypeId>
      </Id>
      <!--TODO Change command code-->
      <Description>

        [RivalAI Command]

        [CommandCode:AirTrafficPathDeviation]
        [SingleRecipient:true]
        [SendWaypoint:true]
        [MatchSenderReceiverOwners:true]
        [Waypoint:Cyber-Waypoint-CallCargoShip]

      </Description>

    </EntityComponent>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>Cyber-Waypoint-CallCargoShip</SubtypeId>
      </Id>
      <Description>

        [RivalAI Waypoint]

        [Waypoint:EntityRandom]
        [RelativeEntity:Self]
        [MinDistance:60]
        [MaxDistance:101]

      </Description>

    </EntityComponent>
    
  </EntityComponents>
</Definitions>